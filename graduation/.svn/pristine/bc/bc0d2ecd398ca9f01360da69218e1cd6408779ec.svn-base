package com.mvc.common;

/**
 * 验证工具类
 * @author huangzec@foxmail.com
 *
 */
public class Verify {
	
	/**
	 * 检测当前对象是不是为空
	 *  
	 * @Description  
	 * @author huangzec@foxmail.com
	 * @date 2014-8-3 下午01:48:37
	 * @return boolean
	 */
	public static boolean isEmpty(Object obj)
	{
		if(null == obj) {
			return true;
		}
		if("".equals(obj.toString().trim())) {
			return true;
		}
		
		return false;
	}

}
