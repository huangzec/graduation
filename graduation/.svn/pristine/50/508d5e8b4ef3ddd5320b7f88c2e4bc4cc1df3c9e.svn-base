package com.mvc.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.mvc.dao.SontopicDao;
import com.mvc.entity.Sontopic;

@Service
public class SontopicService {

	@Autowired
	private SontopicDao sontopicDao;
	/**
	 * 
	 * 添加子课题记录 
	 * @Description  
	 * @author Happy_Jqc@163.com
	 * @date 2014-7-26 下午5:01:05
	 * @return void
	 */
	public void save(Sontopic s_topic) {
		sontopicDao.save(s_topic);
	}
	public List<Sontopic> getAll(String sql) {
		return sontopicDao.getAll(sql);
	}

}
