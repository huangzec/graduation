<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="graduationPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.mvc.entity.Teacher</class>
		<class>com.mvc.entity.Student</class>
		<class>com.mvc.entity.Deptmanager</class>
		<class>com.mvc.entity.Taskdoc</class>
		<class>com.mvc.entity.Tbclass</class>
		<class>com.mvc.entity.Gradeall</class>
		<class>com.mvc.entity.Opentopicinfo</class>
		<class>com.mvc.entity.StuTeaTopic</class>
		<class>com.mvc.entity.Topicreport</class>
		<class>com.mvc.entity.Tbtopic</class>
		<class>com.mvc.entity.Gradeone</class>
		<class>com.mvc.entity.Tboffice</class>
		<class>com.mvc.entity.Tbgrade</class>
		<class>com.mvc.entity.Sontopic</class>
		<class>com.mvc.entity.Profession</class>
		<class>com.mvc.entity.Department</class>
		<class>com.mvc.entity.Gradethree</class>
		<class>com.mvc.entity.Graduateinfo</class>
		<class>com.mvc.entity.Gradetwo</class>
		<class>com.mvc.entity.User</class>
		<class>com.mvc.entity.UserId</class>
		<class>com.mvc.entity.Settime</class>
		<class>com.mvc.entity.Message</class>
		<class>com.mvc.entity.Reviewresult</class>
		<class>com.mvc.entity.Selectfirst</class>
		<properties>
			<property name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:mysql://localhost:3306/hh_teachermanage" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password"
				value="123456" />
		</properties>
	</persistence-unit>

</persistence>
