										</div> <!-- /controls -->		
										<div class="controls">
											任务人学号：　<input name="stuID2" class="input_required" id="stuID2" type="text" size="30" />
										</div> <!-- /controls -->		
									</div> <!-- /control-group -->
									<hr />
