	init: function() {
		this.bindBtnPassClick();
		this.bindBtnRepassClick();
		this.bindModalBtn();
		this.bindToggleClick();
		this.bindModalClick();
		this.bindSubModalClick();
		this.bindSwitchBtn();
		this.bindSubTopicClick();
	},
	bindBtnPassClick: function() {
